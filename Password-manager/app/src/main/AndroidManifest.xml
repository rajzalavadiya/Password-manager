<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.passwordmanager">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/security"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MainActivity"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.crown.passwordmanager.MainActivity"
            android:exported="false" />
        <activity
            android:name="com.crown.passwordmanager.UpdatePasswordActivity"
            android:exported="false" />
        <activity
            android:name="com.crown.passwordmanager.AddPasswordActivity"
            android:exported="false" />
        <activity
            android:name="com.crown.passwordmanager.ContactUsActivity"
            android:exported="false" />
        <activity
            android:name="com.crown.passwordmanager.SignUpActivity"
            android:exported="false" />
        <activity
            android:name="com.crown.passwordmanager.ForgetPasswordActivity"
            android:exported="false" />
        <activity
            android:name="com.crown.passwordmanager.ChangePasswordActivity"
            android:exported="false" />
        <activity
            android:name="com.crown.passwordmanager.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.crown.passwordmanager.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>